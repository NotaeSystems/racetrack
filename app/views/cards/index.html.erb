<h1>Listing cards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.name %></td>

    <td><%= card.description %></td>

<%if current_user.is_track_owner?(@track) %>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>

  </tr>
<% end %>
</table>

<br />
<%if current_user.is_track_owner?(@track) %>
  <%= link_to 'New Card', new_card_path %>
<%end%>
