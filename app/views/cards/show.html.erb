<h3>Listing <%=@track.race_alias.pluralize%></h3>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Name</th>
    <th>Start betting time</th>
    <th>End betting time</th>
    <th>Description</th>
<%if user_is_track_owner?(@track) %>
    <th></th>
    <th></th>
    <th></th>
 <%end%>
  </tr>

<% @races.each do |race| %>
  <tr>
    <td><%= link_to race.name, race_path(:id => race.id), :class => 'btn' %></td>
    <td><%= race.start_betting_time.strftime("%B %d at %I:%M %p %Z") %></td>
    <td><%= race.post_time.strftime("%B %d at %I:%M %p %Z") %></td>
    <td><%= race.description %></td>
<%if user_is_track_owner?(@track) %>
    <td><%= link_to 'Edit', edit_race_path(race), :class => 'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %></td>
 <%end%>
  </tr>
<% end %>
</table>

<br />

<%if user_is_track_owner?(@track) %>
<%= link_to "New #{@track.race_alias}", new_race_path(:card_id => @card.id), :class => 'btn btn-mini btn-warning' %>


<%= link_to "Edit #{@card.name}", edit_card_path(@card), :class => 'btn btn-mini btn-warning' %>

<%end%>

<h3>Comments</h3>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>User</th>
    <th>Comment</th>
<% if user_signed_in? %>
    <% if current_user.has_role :admin %>
    <th></th>
    <th></th>
    <th></th>
    <%end%>
<%end%>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.user.name %></td>
    <td><%= comment.body %></td>
<% if user_signed_in? %>
    <% if current_user.has_role :admin %>
      <td><%= link_to 'Show', comment %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
      <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
  <%end%>
  </tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Comment', new_comment_path(:card_id => @card.id), :class => 'btn' %>
<%else%>
Log in to Comment
<%end%>
