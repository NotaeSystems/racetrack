<div class='track_box'>
<h1> <%= @track.track_alias%>:<%= link_to @track.name, track_path(@track.id)%></h1>
</div>
<div class='meet_box'>
<h2>  <%= @track.meet_alias%>: <%= link_to @meet.name, @meet %></h2>
<%= render :partial => 'meets/credits' %>
</div>
<div class='card_box'>
<h3> <%= @track.card_alias%>:<%= link_to @card.name, card_path(:id => @card.id) %></h3>

<p>
  <%= @card.description %><%= render :partial => 'cards/credits' %>
</p>

<h4> <%=@track.race_alias.pluralize%></h4>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Name</th>
    <th>Start betting time</th>
    <th>End betting time</th>
    <th>Description</th>
<%if user_is_track_owner?(@track) %>
    <th></th>
    <th></th>
    <th></th>
 <%end%>
  </tr>

<% @races.each do |race| %>
  <tr>
    <td><%= link_to race.name, race_path(:id => race.id), :class => 'btn btn-block' %></td>
    <td><%= race.start_betting_time.strftime("%B %d at %I:%M %p %Z") %></td>
    <td><%= race.post_time.strftime("%B %d at %I:%M %p %Z") %></td>
    <td><%= race.description %></td>
<%if user_is_track_owner?(@track) %>
    <td><%= link_to 'Edit', edit_race_path(race), :class => 'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %></td>
 <%end%>
  </tr>
<% end %>
</table>

<br />

<%if user_is_track_owner?(@track) %>
<%= link_to "New #{@track.race_alias}", new_race_path(:card_id => @card.id), :class => 'btn btn-mini btn-warning' %>



<%=link_to "Edit #{@card.name}", edit_card_path(@card),:class => 'btn btn-mini btn-warning' %>
 <%= link_to "Close #{@card.name}", close_card_path(@card),  data: { confirm: "Are you sure? This will close this #{@track.card_alias}" }, :class => 'btn btn-mini btn-warning' %>
<%end%>
</div>
<div class='comment_box'>


<% if user_signed_in? %>
<%= link_to 'New Comment', new_comment_path(:card_id => @card.id), :class => 'btn' %>
<%else%>
Log in to Comment
<%end%>
  <%= render :partial => 'comments/index_table' %>
</div>
