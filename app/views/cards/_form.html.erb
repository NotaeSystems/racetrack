<%= simple_form_for(@card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status, :collection => ['Pending', 'Open', 'Closed'],  :selected => @card.status %>
    <%= f.hidden_field :meet_id , :value => @card.meet_id%>
    <%= f.input :initial_credits %>
    <%= f.input :description %>
    <%= f.input :completed %>
    <%= f.input :completed_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
