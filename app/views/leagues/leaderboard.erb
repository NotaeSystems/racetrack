      <tr>
          <th>Member</th>
          <th>Credits</th>
          <th>Rank</th>
          <th></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @leagueusers.each_with_index do |leagueuser, index| %>
