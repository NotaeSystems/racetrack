<% content_for :head do %>
    <meta property="og:title" content="<%=@league.name%>"/>
    <meta property="og:type" content="game"/>
    <meta property="og:url" content="<%="http://www.fantasyoddsmaker.com/leagues/#{@league.id}/"%>"/>
    <meta property="og:image" content="http://ia.media-imdb.com/rock.jpg"/>
    <meta property="og:site_name" content="Fantasy Odds Maker-<%=@league.name%>"/>
    <meta property="og:description"
          content="<%=@league.description%>"/>

<%end%>

<%if @league%>
<h1> <%= link_to @league.name, @league %></h1>
<div class="fb-like" data-href="<%= j "http://www.fantasyoddsmaker.com/leagues/#{@league.id}/"%>" data-send="true" data-width="450" data-show-faces="true"></div>
<p>
  <%= @league.description %>
</p>
<%end%>

<%if @league.status == 'Public' || is_league_member?(@league) %>
  <%= link_to 'Members', leagueusers_path(:id => @league.id), :class => 'btn' %>
  <%= link_to 'Meets', meetleagues_path(:league_id => @league.id), :class => 'btn' %>
<%end%>

<% if user_signed_in? %>
  <% unless is_league_member?(@league) %>
    <%if @league.status == 'Public' %>
      <%= link_to "Join #{@league.name}", join_league_path(:id => @league.id, :status => 'Member'), :class => 'btn' %>
    <%else%>
      <% if is_pending_member?(@league) %>
        Membership Pending
      <%else%> 
      
        <%= link_to "Request Permission to Join #{@league.name}", join_league_path(:id => @league.id, :status => 'Pending' ), :class => 'btn' %>
      <%end%>
    <%end%>
  <%else%>
    
       <%= link_to "Quit #{@league.name}", quit_league_path(:id => @league.id), :class => 'btn btn-danger', :data => { :confirm => "Are you sure? This will remove you as a member of #{@league.name}!" } %>
   
  <%end%>
<%else%>

  <p>Sign In or Sign Up to Join the League</p>
<%end%>


<h5>Comments on <%=@league.name%></h5>

</div>
<fb:comments-count href="<%= j "http://www.fantasyoddsmaker.com/leagues/#{@league.id}/"%>"></fb:comments-count> comments 

<div class="fb-comments" data-href="<%=j "http://www.fantasyoddsmaker.com/leagues/#{@league.id}/"%>" data-width="470" data-num-posts="10"></div>

