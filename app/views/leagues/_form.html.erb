<%= simple_form_for(@league) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
      <%= f.select :status, ['Open','Closed'] %>
    <%= f.input :membership, :collection => ['Public', 'Private'],  :selected =>@league.membership %>
  <%= f.input :tag_list, :label => "Tags (separated by commas)" %>
    <% if user_is_admin? %>
      <%= f.input :active %>
    <%end%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
