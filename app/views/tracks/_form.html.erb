<%= simple_form_for(@track) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status, :collection => ['Pending', 'Open', 'Closed', 'Trash'],  :selected =>@track.status %>
    <%= f.input :description %>
    <% if user_is_admin?%>
      <%= f.input :owner_id %>
    <%else%>  
      <%= f.hidden_field :owner_id %>
    <%end%>
    <%= f.input :public %>
    <%= f.input :track_alias %>
    <%= f.input :meet_alias %>
    <%= f.input :card_alias %>
    <%= f.input :race_alias %>
    <%= f.input :horse_alias %>
    <%= f.input :credit_alias %>
    <%= f.input :member_alias %>
    <%= f.input :bet_alias %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
