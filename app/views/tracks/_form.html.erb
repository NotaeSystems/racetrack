<%= simple_form_for(@track) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :owner_id %>
    <%= f.input :public %>
    <%= f.input :open %>
    <%= f.input :track_alias %>
    <%= f.input :meet_alias %>
    <%= f.input :card_alias %>
    <%= f.input :race_alias %>
    <%= f.input :horse_alias %>

    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
