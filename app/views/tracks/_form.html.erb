<%= simple_form_for(@track) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status, :collection => ['Pending', 'Open', 'Closed', 'Trash'],  :selected =>@track.status %>
    <%= f.input :membership, :collection => ['Public', 'Private'],  :selected =>@track.membership %>
    <%= f.input :description %>


  <%= f.input :tag_list, :label => "Tags (separated by commas)" %>




    <% if user_is_admin?%>
      <%= f.input :owner_id %>
    <%else%>  
      <%= f.hidden_field :owner_id %>
    <%end%>
    <%= f.hidden_field :track_alias %>
    <%= f.hidden_field :meet_alias %>
    <%= f.hidden_field :card_alias %>
    <%= f.hidden_field :race_alias %>
    <%= f.hidden_field :horse_alias %>
    <%= f.hidden_field :credit_alias %>
    <%= f.hidden_field :member_alias %>
    <%= f.hidden_field :bet_alias %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
