<h1>Listing bets</h1>
<%= will_paginate @bets %>
<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Member</th>
    <th>Horse</th>
    <th>Amount</th>
    <th>Bet type</th>
    <th>Status</th>
    <th>Date</th>

  </tr>

<% @bets.each do |bet| %>
  <tr>
       <td><%= image_tag avatar_url(bet.user) %><br />
    <small><%= bet.user.name %></small></td>
    <td><%= link_to "#{bet.track.name unless bet.track.blank?} -> #{bet.meet.name unless bet.meet.blank?} -> #{bet.card.name unless bet.card.blank?}-#{bet.horse.name}", race_path(:id => bet.race.id), :class => 'btn btn-block' %></td>
    <td><%= bet.amount %></td>
    <td><%= bet.bet_type %></td>
    <td><%= bet.status %></td>
    <td><%= bet.created_at.strftime("%B %d at %I:%M %p %Z") %></td>

  </tr>
<% end %>
</table>
<%= will_paginate @bets %>
<br />

