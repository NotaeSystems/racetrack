<h1>Listing credits</h1>
<%= will_paginate @cards %>
<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>User</th>
    <th>Track</th>
    <th>Meet</th>
    <th>Card</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Level</th>
    <th>Credit type</th>
    <th>Date</th>

  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= credit.user.name %></td>
    <td><%= credit.track.name unless credit.track.blank?%></td>
    <td><%= credit.meet.name unless credit.meet.blank? %></td>
    <td><%= credit.card.name  unless credit.card.blank? %></td>
    <td><%= credit.amount %></td>
    <td><%= credit.description %></td>
    <td><%= credit.level %></td>
    <td><%= credit.credit_type %></td>
    <td><%= credit.created_at.strftime("%B %d at %I:%M %p %Z") %></td>
    <% if user_is_site_manager? %>
      <td><%= link_to 'Show', credit %></td>
      <td><%= link_to 'Edit', edit_credut_path(contract) %></td>
      <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
  </tr>
<% end %>
</table>
<%= will_paginate @cards %>
<br />


