<%= simple_form_for(@credit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :meet_id %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.input :credit_type %>
    <%= f.input :level, ['White', 'Red', 'Green'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
