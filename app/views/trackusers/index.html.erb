<div class='track_box'>
<h1> <%= @track.track_alias%>: <%= link_to @track.name, track_path(@track.id)%></h1>
</div>
<h1>Listing Handicappers</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Nickname</th>
    <th>Track</th>
    <th>User</th>
    <th>Role</th>
    <th>Allow comments</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trackusers.each do |trackuser| %>
  <tr>
    <td><%= image_tag avatar_url(trackuser.user) %><%= raw "<br >#{trackuser.nickname}" %></td>
    <td><%= trackuser.track.name %></td>
    <td><%= trackuser.user.name %></td>
    <td><%= trackuser.role %></td>
    <td><%= trackuser.allow_comments %></td>

    <td><%= link_to 'Show', trackuser %></td>
    <td><%= link_to 'Edit', edit_trackuser_path(trackuser) %></td>
    <td><%= link_to 'Destroy', trackuser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

