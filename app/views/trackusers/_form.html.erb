
<%= simple_form_for(@trackuser) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname %>
    <%= f.select :status, ['Member', 'Removed', 'Banned'] %>
    <%= f.input :allow_comments %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
