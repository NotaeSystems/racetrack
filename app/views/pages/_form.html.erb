<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body, :input_html => {:rows => 5, :placeholder => "Enter some text.", :class => "span10"} %>
    <%= f.input :permalink %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
