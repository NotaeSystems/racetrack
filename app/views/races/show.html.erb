<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @race.name %>
</p>

<p>
  <b>Card:</b>
  <%= @race.card_id %>
</p>


<p>
  <b>Start betting time:</b>
  <%= @race.start_betting_time %>
</p>

<p>
  <b>Post time:</b>
  <%= @race.post_time %>
</p>

<p>

  <%= @race.description %>
</p>

<h3>Listing horses</h3>

<table>


<% @horses.each do |horse| %>
  <tr>
    <td><%= horse.name %></td>
    <td><%= horse.race_id %></td>
    <td><%= horse.description %></td>
    <td><%= horse.finish %></td>
    <td><%= link_to 'Show', horse %></td>
    <td><%= link_to 'Edit', edit_horse_path(horse, :race_id => @race.id) %></td>
    <td><%= link_to 'Destroy', horse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

