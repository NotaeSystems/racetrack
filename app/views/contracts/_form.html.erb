<%= simple_form_for(@contract) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :contract_type %>
    <%= f.input :user_id %>
    <%= f.input :site_id %>
    <%= f.input :gate_id %>
    <%= f.input :race_id %>
    <%= f.input :number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
