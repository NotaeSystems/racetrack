<h1>Listing horses</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Name</th>
    <th>Race</th>
    <th>Description</th>
    <th>Finish</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= will_paginate @horses %>
<% @horses.each do |horse| %>
  <tr>
    <td><%= horse.name %></td>
    <td><%= link_to horse.race.name, race_path(horse.race), :class => 'btn btn-mini'  %></td>
    <td><%= horse.description %></td>
    <td><%= horse.finish %></td>
   <%if user_is_track_manager?(horse.track) %>
    <td><%= link_to 'Show', horse %></td>
    <td><%= link_to 'Edit', edit_horse_path(horse), :class => 'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', horse, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %></td>
   <%end%>
  </tr>
<% end %>
</table>

<br />
<%if user_is_track_owner?(@track) %>
  <%= link_to 'New Horse', new_horse_path, :class => 'btn btn-mini btn-warning' %>
<%end%>
