<%= simple_form_for(@horse) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
       <%=  f.hidden_field :race_id , :value => @race.id %>
    <%= f.input :description %>
    <%= f.input :finish %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
