<h1>Listing credits</h1>
<%= will_paginate @credits %>
<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>User</th>
    <th>Track</th>
    <th>Meet</th>
    <th>Card</th>
    <th>Amount</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Credit type</th>
    <th>Date</th>

  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= credit.user.name if credit.user %></td>
    <td><%= credit.track.name if credit.track%></td>
    <td><%= credit.meet.name unless credit.meet.blank? %></td>
    <td><%= credit.card.name  unless credit.card.blank? %></td>
    <td><%= credit.amount %></td>
    <td><%= credit.level %></td>
    <td><%= credit.description %></td>
    <td><%= credit.credit_type %></td>
    <td><%= credit.created_at.strftime("%B %d at %I:%M %p %Z") %></td>
     <% if current_user.has_role? :admin %>

       <td><%= link_to 'Edit', edit_credit_path(credit) %><td>
     <%end%>
  </tr>
<% end %>
</table>
<%= will_paginate @credits %>
<br />
