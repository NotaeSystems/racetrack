
<h1>Pending Offers</h1>
<h2>Listing Sell Offers</h2>
<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Rank</th>
    <th>Race</th>
    <th>Price</th>

    <th>Expires</th>

    <th>Number</th>

  </tr>

<% @sell_offers.each_with_index do |offer, index| %>

    <tr>

    <td><%= index + 1 %></td>
 <td><%= link_to offer.gate.race.name, offers_path(:gate_id => offer.gate.id), :class => 'btn btn-success' %></td>
    <td><%= offer.price %></td>
    <td><%= distance_of_time_in_words_to_now(offer.expires) unless offer.expires.blank? %></td>
    <td><%= offer.number %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


