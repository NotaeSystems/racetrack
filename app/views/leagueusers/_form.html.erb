<%= simple_form_for(@leagueuser) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname %>
    <% if is_league_manager?(@league)%>
    <%= f.select :status, ['Member', 'Manager', 'Pending', 'Banned'] %>
    <%= f.input :amount %>
    <%= f.input :active %>
    <%end%>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Member" %>
  </div>
<% end %>
