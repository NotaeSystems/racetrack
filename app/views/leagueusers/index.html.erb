<h1> <%= link_to @league.name, @league %></h1>

<h1>Members</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>

    <th>Status</th>
    <th>Nickname</th>
    <th>Active</th>

    <th></th>
    <th></th>
  </tr>

<% @leagueusers.each do |leagueuser| %>
  <tr>

    <td><%= leagueuser.status %></td>
    <td><%= leagueuser.nickname %></td>
    <td><%= leagueuser.active %></td>
    <% if is_league_manager?(@league)%>
      <td><%= link_to 'Edit', edit_leagueuser_path(leagueuser), :class => 'btn btn-warning' %></td>
      <td><%= link_to 'Remove', leagueuser, method: :delete, data: { confirm: "Are you sure? This will remove #{leagueuser.nickname} from this League" } , :class => 'btn btn-warning'%></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />


