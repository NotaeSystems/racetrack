<h1>Listing achievements</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Url</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Points</th>
    <th>Rule</th>
    <th>Position</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @achievements.each do |achievement| %>
  <tr>
    <td><%= achievement.name %></td>
    <td><%= achievement.title %></td>
    <td><%= achievement.url %></td>
    <td><%= achievement.description %></td>
    <td><%= achievement.image_url %></td>
    <td><%= achievement.points %></td>
    <td><%= achievement.rule %></td>
    <td><%= achievement.position %></td>
    <td><%= achievement.status %></td>
    <td><%= link_to 'Show', achievement %></td>
    <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
    <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

