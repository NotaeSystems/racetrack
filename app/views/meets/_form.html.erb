<%= simple_form_for(@meet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status, :collection => ['Pending', 'Open', 'Closed'],  :selected => @meet.status %>
    <%= f.hidden_field :track_id, :value => @track.id %>
    <%= f.input :description %>
    <%= f.input :initial_credits %>
    <%= f.input :completed %>
    <%= f.input :completed_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
