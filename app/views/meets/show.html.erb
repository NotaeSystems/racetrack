<h1><%=@track.name %></h1>
<p id="notice"><%= notice %></p>

<p>

<h2>  <%= @meet.name %></h2>
</p>
<p>
  <b>Description:</b>
  <%= @meet.description %>
</p>

<h3>Cards</h3>

<table class='table table-striped table-bordered table-condensed'>


<% @cards.each do |card| %>
  <tr>
    <td><%= link_to card.name, card_path(card), :class => 'btn' %></td>
    <td><%= card.description %></td>
    <%if current_user.is_track_owner?(@track) %>

      <td><%= link_to 'Edit', edit_card_path(card),  :class => 'btn btn-mini btn-warning' %></td>
      <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />



<%if current_user.is_track_owner?(@track) %>
<%= link_to "New Card for #{@meet.name}", new_card_path(:meet_id => @meet.id), :class => 'btn btn-mini btn-warning' %>
  <%= link_to "Edit Meet-#{@meet.name}", edit_meet_path(@meet), :class => 'btn btn-mini btn-warning' %> |
<%end%>
