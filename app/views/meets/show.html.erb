<h1><%= link_to @track.name, track_path(@track.id)%></h1>
<p id="notice"><%= notice %></p>

<p>

<h2>  <%= @track.meet_alias%>: <%= link_to @meet.name, @meet %></h2>
</p>
<p>
  <b>Description:</b>
  <%= @meet.description %>
</p>


  <%= render :partial => 'meets/credits' %>

<h3><%=@track.card_alias.pluralize%></h3>
<table class='table table-striped table-bordered table-condensed'>


<% @cards.each do |card| %>
  <tr>
    <td><%= link_to card.name, card_path(card), :class => 'btn' %></td>
    <td><%= card.description %></td>
    <%if user_is_track_owner?(@track) %>

      <td><%= link_to "Edit #{@track.card_alias}", edit_card_path(card),  :class => 'btn btn-mini btn-warning' %></td>
      <td><%= link_to "Destroy-#{@track.card_alias}", card, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-warning' %></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />



<%if user_is_track_owner?(@track) %>
<%= link_to "New #{@track.card_alias} for #{@meet.name}", new_card_path(:meet_id => @meet.id), :class => 'btn btn-mini btn-warning' %>
  <%= link_to "Edit #{@track.card_alias}-#{@meet.name}", edit_meet_path(@meet), :class => 'btn btn-mini btn-warning' %> |
<%end%>
