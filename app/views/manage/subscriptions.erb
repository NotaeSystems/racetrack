<h1>Listing subscriptions</h1>

<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Site</th>
    <th>Status</th>
    <th>Plan</th>
    <th>Description</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subscriptions.each do |subscription| %>
  <tr>
    <td><%= subscription.plan.title %></td>
    <td><%= link_to subscription.user.name, user_path(subscription.user) %></td>
    <td><%= subscription.site.name %></td>
    <td><%= subscription.status %></td>
    <td><%= subscription.plan.name%></td>
    <td><%= subscription.description %></td>

    <td><%= link_to 'Show', subscription %></td>
    <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>

  </tr>
<% end %>
</table>

<br />

