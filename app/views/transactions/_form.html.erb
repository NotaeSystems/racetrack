<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :site_id %>
    <%= f.input :transaction_type %>
    <%= f.input :track_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
