<h1><%= link_to @track.name, track_path(@track.id)%></h1>
<p id="notice"><%= notice %></p>

<p>

<h2>Listing rankings for <%= link_to @meet.name, meet_path(:id => @meet.id) %></h2>
Your Rank: <%=@rank%>
<table class='table table-striped table-bordered table-condensed'>
  <tr>
    <th>User</th>
    <th>Amount</th>
    <th>Rank</th>

  </tr>
<%rank = 0 %>
<% @rankings.each do |ranking| %>
<% rank = rank + 1 %>
  <tr>
    <td><%= ranking.user.name %></td>
    <td><%= ranking.amount %></td>
   <td><%= rank %></td>

  </tr>
<% end %>
</table>



